<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBFB"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iconSapa"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/morning" />

            <TextView
                android:id="@+id/sapa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Selamat Pagi"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_extralight"
                android:text="Zaky Jamaluddin"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Pagi ini tidak akan pernah kembali lagi dalam hidupmu. Bangunlah dan manfaatkan semuanya."
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/shadow_suggestion"
                android:elevation="3dp"
                android:fontFamily="@font/inter_extralight"
                android:padding="25dp"
                android:text="Ahad pagi yang cerah, waktu yang tepat untuk menyuci pakaian. Klik untuk membuka atap jemuran"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_light"
                android:text="Pintasan"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/pintasanKunci"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shadow_pintasan_off">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/key" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/pintasanLampu"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shadow_pintasan_off">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/idea" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/pintasanJemuran"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/shadow_pintasan_on">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/fashion" />
                </FrameLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="150dp"
                android:backgroundTint="#FF0000"
                android:text="Bicara Denganku"
                android:textAllCaps="false"
                android:textSize="15sp" />
        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>